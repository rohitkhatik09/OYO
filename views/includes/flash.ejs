<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between " role="alert">
        <p style="font-size: 1.5rem;">
            <b>
                <%=success%>
            </b>
        </p>
        <button type="button" class="close p-0 m-0 bg-transparent border-0 " data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" style="font-size: 1.5rem;"> &times;
        </button>
    </div>
    <% } %>

        <% if(error && error.length) {%>
            <div class="alert alert-dark alert-dismissible fade show d-flex justify-content-between " role="alert">
                <p style="font-size: 1.5rem;">
                    <b>
                        <%=error%>
                    </b>
                </p>
                <button type="button" class="close p-0 m-0 bg-transparent border-0 " data-dismiss="alert"
                    aria-label="Close">
                    <span aria-hidden="true" style="font-size: 1.5rem;"> &times;
                </button>
            </div>
            <% } %>