<% layout("/layouts/boilerPlate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1><b>
                    <%= listDetail.title %>
                </b> </h1>
        </div>
        <div class="card listing-card col-6 offset-3 show-card">
            <img src="<%= listDetail.image %>" class="card-img-top show-img" alt="image">
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%= listDetail.description %>
                        <br>
                        &#8377;<%= listDetail.price.toLocaleString("en-IN") %>
                            <br>
                            <%= listDetail.location %>
                                <br>
                                <%= listDetail.country %>
                </p>
            </div>
        </div>
        <div class="btns">
            <a class="btn btn-dark col-1.5 offset-3 edit-btn" href="/listings/<%= listDetail._id %>/edit">
                Edit this
            </a>
            <form action="/listings/<%= listDetail._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark col-12 offset-5">Delete this</button>
            </form>
        </div>
        <div class="col-8 offset-3 mt-5 mb-3">
            <hr>
            <h4>Leav a review</h4>
            <form action="/listings/<%= listDetail._id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mt-3 mb-3">
                    <label for="rating" class="form-label">Rating</label> &nbsp;
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mt-3 mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" class="form-control" placeholder="Add comment"
                        required></textarea>
                    <div class="invalid-feedback">Please Enter Some Comment</div>
                </div>
                <button class="btn btn-outline-dark">Submit Review</button>
            </form>
            <div class="reviews mt-5 mb-3">
                <hr>
                <h4>all reviews</h4>
                <div class="row mt-3 mb-3">
                    <% for(review of listDetail.reviews){ %>
                        <div class="card col-5 ms-5 mt-3 mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Rohit</h6>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="card-text">
                                    <%= review.rating %> Stars
                                </p>
                                <form action="/listings/<%= listDetail._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="post">
                                    <button class="btn btn-sm btn-dark">Delete</button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>

        </div>
    </div>